# Sourced by both .bashrc and .zshrc

export VISUAL=vim
export EDITOR="$VISUAL"

if [ -f ~/.initshell-site]; then
  source ~/.initshell-site
fi

export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export PATH="/opt/geckodriver/bin:$PATH"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

setxkbmap -model pc105 -layout eurkey -option grp:alt_shift_toggle

if [ -d "$HOME/.pyenv" ]; then 
  export PYENV_ROOT="$HOME/.pyenv"
  export PATH="$PYENV_ROOT/bin:$PATH"
  if command -v pyenv 1>/dev/null 2>&1; then
    eval "$(pyenv init -)"
  fi
  eval "$(pyenv virtualenv-init -)"
fi

alias s="tmux capture-pane -J -p -S -30000 | cat -s > ~/.ssh/tmux && vi -c ':$' ~/.ssh/tmux"

alias vi=vim

# Helpers for pytest:
alias pytest-v="pytest --log-level=INFO --show-capture=stdout"
alias pytest-vv="pytest --log-level=DEBUG --show-capture=stdout --tb long --showlocals"

# fzf ignores hidden files by default
export FZF_DEFAULT_COMMAND='ag --hidden --ignore .git -g ""'

